<Window x:Class="KiryanCollege.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KiryanCollege"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1440">
    <Grid Background="LightYellow">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="440"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1">
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
                <RowDefinition/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Height="80" Content="Добавить группу" Name="AddGroupBtn" Click="AddGroupBtn_Click" FontSize="40"/>
            <Button Grid.Row="2" Height="80" Content="Добавить активность" Name="AddActivityBtn" Click="AddActivityBtn_Click" FontSize="40"/>
            <Button Grid.Row="4" Height="80" Content="Учёт" Name="JournalBtn" Click="JournalBtn_Click" FontSize="40"/>
            <Button Grid.Row="6" Height="80" Content="Отчёт 1" Name="Report1Btn" Click="Report1Btn_Click" FontSize="40"/>
            <Button Grid.Row="8" Height="80" Content="Отчёт 2" Name="Report2Btn" Click="Report2Btn_Click" FontSize="40"/>
        </Grid>
        </Border>
        <Frame Grid.Column="1" Grid.RowSpan="10" Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
