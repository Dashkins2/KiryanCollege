<Page x:Class="KiryanCollege.Page.AddGroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KiryanCollege.Page"
      mc:Ignorable="d" 
      Height="800" Width="1000"
      Title="AddGroupPage">
    <Grid Background="LightYellow">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите группу" Grid.Row="1" FontSize="35" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Text="Выберите специальность" Grid.Row="3" FontSize="35" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button Grid.Column="2" Grid.Row="5" Height="100" Width="400" Background="Gray" Content="Добавить" FontSize="40" Name="AddBtn" Click="AddBtn_Click"/>
        <TextBox Name="GroupTb" Grid.Row="1" Grid.Column="3" Height="70" Width="400" FontSize="45"/>
        <ComboBox Name="ChangeSpecialCmb" Grid.Row="3" Grid.Column="2" Height="70" Width="400" FontSize="30"/>
    </Grid>
</Page>
