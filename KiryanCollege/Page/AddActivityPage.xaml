<Page x:Class="KiryanCollege.Page.AddActivityPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KiryanCollege.Page"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="AddActivityPage">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="2">
            <Grid Background="LightYellow">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="Введите активность" Grid.Row="1" FontSize="35" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="Выберите направление" Grid.Row="3" FontSize="35" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Button Grid.Column="2" Grid.Row="5" Height="100" Width="430" Content="Добавить" FontSize="40" Name="AddBtn" Click="AddBtn_Click"/>
                <TextBox Name="ActivityTb" Grid.Row="1" Grid.Column="3" Height="70" Width="400" FontSize="45"/>
                <ComboBox Name="ChangeDirectionCmb" Grid.Row="3" Grid.Column="2" Height="70" Width="400" FontSize="30"/>
            </Grid>
        </Border>
    </Grid>
</Page>
